Install ChefDK
	sudo apt-get update
	sudo apt-get -y install curl
	curl https://omnitruck.chef.io/install.sh | sudo bash -s -- -P chefdk -c stable -v 2.0.28
	chef --version
	sudo apt-get install nano 
	
